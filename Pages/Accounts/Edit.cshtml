@page "{id:int}"
@model MiniAccountSystemDB.Pages.Accounts.EditModel
@{
    ViewData["Title"] = "Edit Account";
}

<h2>Edit Account</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Account.Name" class="form-label"></label>
        <input asp-for="Account.Name" class="form-control" />
        <span asp-validation-for="Account.Name" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Account.Id" />
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
