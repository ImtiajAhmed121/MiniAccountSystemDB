@page "{id:int}"
@model MiniAccountSystemDB.Pages.Accounts.DeleteModel
@{
    ViewData["Title"] = "Delete Account";
}

<h2>Delete Account</h2>

<h4>Are you sure you want to delete this account?</h4>
<div class="mb-3">
    <strong>ID:</strong> @Model.Account.Id<br />
    <strong>Name:</strong> @Model.Account.Name
</div>

<form method="post">
    <input type="hidden" asp-for="Account.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
