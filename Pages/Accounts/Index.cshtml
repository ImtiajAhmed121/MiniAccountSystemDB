@page
@model MiniAccountSystemDB.Pages.Accounts.IndexModel
@{
    ViewData["Title"] = "Chart of Accounts";
}

<h2>Chart of Accounts</h2>

<a asp-page="Create" class="btn btn-primary mb-2">+ Add New Account</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Account ID</th>
            <th>Account Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var acc in Model.Accounts)
        {
            <tr>
                <td>@acc.Id</td>
                <td>@acc.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@acc.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-page="Delete" asp-route-id="@acc.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
